<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/horsesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/startRaceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Carrera" />
        <Button
            android:id="@+id/stopRaceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detener" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputhorse"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:minHeight="48dp"
                android:hint="NÃºmero caballo"/>

            <Button
                android:id="@+id/stoponehorse"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Detener" />


        </LinearLayout>
        <TextView
            android:id="@+id/winnerTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="Ganador"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
